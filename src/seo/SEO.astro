---
interface SEO {
  url: string;
  title: string;
  description: string;
  ogImage: string | null;
}
const { url, title, description, ogImage } = Astro.props;
---

<meta property="og:url" content={url} />
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={title} />
<meta property="og:image" content={ogImage ?? "https://junkbox-astro-ssr.pages.dev/ogp_01.jpg"} />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:image" content={ogImage ?? "https://junkbox-astro-ssr.pages.dev/ogp_01.jpg"} />
